<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/babyName"
        android:layout_width="227dp"
        android:layout_height="50dp"
        android:elevation="7dp"
        android:gravity="center_horizontal"
        android:hint="@string/today_cristiano_ronaldo_is"
        android:letterSpacing="-0.02"
        android:maxLines="2"
        android:textColor="@color/app_title_color"
        android:textColorHint="@color/app_title_color"
        android:textSize="21sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="7dp"
            android:layout_marginTop="25.2dp"
            android:src="@drawable/swirls_left" />

        <ImageView
            android:id="@+id/age_number_image_view"
            android:layout_width="48dp"
            android:layout_height="85dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:elevation="7dp"
            android:src="@drawable/number_1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="7dp"
            android:layout_marginTop="25.2dp"
            android:src="@drawable/swirls_right" />
    </LinearLayout>

    <TextView
        android:id="@+id/age_in_words"
        android:layout_width="226dp"
        android:layout_height="25dp"
        android:gravity="center_horizontal"
        android:hint="@string/month_old"
        android:letterSpacing="-0.02"
        android:textColor="@color/app_title_color"
        android:textColorHint="@color/app_title_color"
        android:textSize="21sp"
        android:textStyle="normal" />

</LinearLayout>